mixin search(keyword, valueSelected)
  form(id="form-search")
    .input-group
      select(
        name="valueSelected"
        class="form-control"
      )
        if(valueSelected)
          each item in valueSelected
            option(value=item.value selected=(valueSelecte === item.value)) #{item.label}

      input(
        type="text"
        placeholder="Nhập từ khóa"
        name="keyword"
        class="form-control"
        value=keyword
      )
      .input-group-append
        button(
          class="btn btn-success"
          type="submit"
        ) Tìm
