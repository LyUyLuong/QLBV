              input(type="checkbox")
        //- Hết Danh sách khoa
        

        //- Nhóm quyền
        tr
          td(colspan="4")
            b Nhóm quyền
        tr(data-name="roles_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="roles_create")
          td Thêm mới
