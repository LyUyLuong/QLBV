extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-success(3000)
  +alert-error(5000)

  h1(class="mb-4") Phân quyền

  if(records)
    div(data-records=records)

    div(class="text-right")
      button(
        type="submit"
        class="btn btn-primary mb-3"
        button-submit
      ) Cập nhật

    table(
      class="table table-hover table-sm"
      table-permissions
    )
      thead
        tr
          th Tính năng
          each item in records
            th(class="text-center") #{item.title}
      tbody
        tr(data-name="id" class="d-none")
          td
          each item in records
            td(class="text-center")
              input(type="text" value=item.id)
        
        //- Danh sách nhân viên
        tr
          td(colspan="3")
            b Danh sách nhân viên
        tr(data-name="employee-category_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="employee-category_create")
          td Thêm mới
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="employee-category_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="employee-category_delete")
          td Xóa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        //- Hết Danh sách nhân viên

        //- Danh sách đề án 
        tr
          td(colspan="3")
            b Danh sách đề án 
        tr(data-name="project-category_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="project-category_create")
          td Thêm mới
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="project-category_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="project-category_delete")
          td Xóa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        //- Hết Danh sách đề án 

        //- Danh sách địa điểm phòng
        tr
          td(colspan="3")
            b Danh sách địa điểm phòng
        tr(data-name="location-category_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="location-category_create")
          td Thêm mới
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="location-category_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="location-category_delete")
          td Xóa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        //- Hết Danh sách địa điểm phòng

        //- Danh sách khoa
        tr
          td(colspan="4")
            b Danh sách khoa
        tr(data-name="department_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="department_create")
          td Thêm mới
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="department_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="department_delete")
          td Xóa
